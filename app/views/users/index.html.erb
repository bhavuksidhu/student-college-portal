<% if user_signed_in? && (current_user.role.name == "admin" || current_user.role.name == "hod" || current_user.role.name == "faculty" ) %>
  <div class="welcom_admin">
    <div class="welcom_admin_inner">
      <div class="heding_top">
        <span>Users Dashboard</span>
        <%= link_to( 'Add User',new_user_path ) %>
      </div>
      <div class="accordion" id="showUsers">
        <% User.all.each_with_index do |user,index| %>
          <div class="card">
            <div class="card-header" id="<%= user.id %>">
              <h5 class="mb-0">
                <button class="btn btn-link left_btn" type="button" data-toggle="collapse" data-target="#hex_<%= index %>" aria-expanded="true" aria-controls="hex_<%= index %>">
                  <%= user.name %>
                </button>
                <button class="btn btn-link btn_link_right" type="button">
                  <%= link_to( 'Edit', edit_user_path(user.id) ) %>
                </button>
                <button class="btn btn-link btn_link_right" type="button">
                  <%= link_to( "Destroy", user_path(user.id), method: :delete, data: { confirm: "You sure to delete user? This cannot be undone." }) %>
                </button>
                <button class="btn btn-link btn_link_right" type="button">
                  <%= link_to( 'Show', user_path(user.id) ) %>
                </button>
              </h5>
            </div>

            <div id="hex_<%= index %>" class="collapse" aria-labelledby="<%= user.id %>" data-parent="#showUsers">
              <div class="card-body">
                <label>Email :</label>
                <span><%= user.email %></span><br>
                <label>Role :</label>
                <span><%= user.role.name.capitalize %></span><br>
                <% if user.department.present? %>
                  <label>Department :</label>
                  <span><%= user.department.name.upcase %></span><br>
                <% end %>
                <% if user.semester.present? %>
                  <label>Semester :</label>
                  <span><%= user.semester.name.capitalize %></span><br>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
