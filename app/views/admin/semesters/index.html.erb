<div class="welcom_admin">
  <div class="welcom_admin_inner">
    <div class="heding_top">
      <span>All Semesters</span>
      <%= link_to( 'Add Semester',new_admin_semester_path ) %>
    </div>
    <% if @semesters.present? %>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Department</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @semesters.each_with_index do |semester,index| %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= semester.name.capitalize %></td>
            <td><%= semester.department.name.capitalize %></td>
            <td>
              <%= link_to( "Remove", admin_semester_path(semester.id), method: :delete, data: { confirm: "You sure to remove semester? This cannot be undone." }) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h5>No semester available to show</h5>
    <% end %>
  </div>
</div>
