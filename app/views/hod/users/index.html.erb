<div class="welcom_admin">
  <div class="welcom_admin_inner">
    <div class="heding_top">
      <span>All HODs</span>
      <%= link_to( 'Add new User',new_hod_user_path ) %>
    </div>
    <% if @faculties.present? %>
      <h5>All Faculties:</h5>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Department</th>
            <th scope="col">Confirmed</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @faculties.each_with_index do |faculty,index| %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= faculty.name.capitalize %></td>
            <td><%= faculty.email %></td>
            <td><%= faculty.department.name.capitalize %></td>
            <td><%= faculty.confirmed? ? 'Already Confirmed' : 'Confirmation Pending' %></td>
            <td><%= link_to( 'Edit', edit_admin_user_path(faculty.id) ) %></td>
            <td>
              <%= link_to( "Delete", admin_user_path(faculty.id), method: :delete, data: { confirm: "You sure to remove faculty? This cannot be undone." }) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h5>There is no faculty in your department</h5>
    <% end %>
    <% if @students.present? %>
      <h5>All Students:</h5>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Department</th>
            <th scope="col">Confirmed</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @students.each_with_index do |student,index| %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= student.name.capitalize %></td>
            <td><%= student.email %></td>
            <td><%= student.department.name.capitalize %></td>
            <td><%= student.confirmed? ? 'Already Confirmed' : 'Confirmation Pending' %></td>
            <td><%= link_to( 'Edit', edit_admin_user_path(student.id) ) %></td>
            <td>
              <%= link_to( "Delete", admin_user_path(student.id), method: :delete, data: { confirm: "You sure to remove student? This cannot be undone." }) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h5>There is no student in your department</h5>
    <% end %>
  </div>
</div>
